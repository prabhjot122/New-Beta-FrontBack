# Frontend Environment Configuration Template
# =======================================================
# Copy this file to .env and update the values for your environment
# For local development, use .env.local
# For production, use the production values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL for the backend API
# Production: https://lawvriksh.com/api
# Development: http://localhost:8000
VITE_API_URL=https://lawvriksh.com/api

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# Number of retry attempts for failed requests
VITE_API_RETRY_ATTEMPTS=3

# Mock mode - set to true to use mock data instead of real API calls
VITE_MOCK_MODE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=true

# Enable push notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# Enable beta features (experimental functionality)
VITE_ENABLE_BETA_FEATURES=false

# Enable offline mode support
VITE_ENABLE_OFFLINE_MODE=false

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# For local development, create a .env.local file with:
# VITE_API_URL=http://localhost:8000
# VITE_MOCK_MODE=false
# VITE_ENABLE_BETA_FEATURES=true
#
# The .env.local file will override values in .env for local development
